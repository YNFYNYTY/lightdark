<%= stylesheet_link_tag "contact" %>

<div class="handshake">
  <h1 class="contact-title">Let's make awesome things together</h1>
</div>
<div class="row">
  <div class="col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1 col-xl-10 col-xl-offset-1">	
	<form id="ajax-contact" method="post" action="mailer.php">

	  <div class="field">
	    <label for="name">Name</span></label>
	    <input type="text" id="name" name="name" placeholder="Write here" required>
	  </div>

	  <div class="field">
	    <label for="email">Email</span></label>
	    <input type="email" id="email" name="email" placeholder="Write here" required>
	  </div>

	  <div class="field">
	    <label for="message">Message</label>
	    <textarea id="message" name="message" placeholder="Write here, tell us about your project" required></textarea>
	  </div>

	  <div class="field">
	    <button id='enviar' type="submit">Send</button>
	  </div>

	</form> <!-- END FORM -->

    <div id="form-messages"></div>
  </div>
</div>

<div class="separator"></div>
<div class="map">
	<h3 class="map-text">We are based in Bilbao, Basque Country. On the northern coast of Spain.</h3>
</div>
